<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /myportfolio/
  
  # 디렉토리 접근 시 index.html로 리다이렉트 (디렉토리 리스팅 방지)
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteCond %{REQUEST_URI} !^/myportfolio/$
  RewriteRule ^(.*)$ index.html [L]
  
  # 실제 파일이 존재하면 그대로 서빙
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # 그 외의 모든 요청을 index.html로 리다이렉트
  RewriteRule ^ index.html [L]
</IfModule>

# 디렉토리 리스팅 비활성화
Options -Indexes

